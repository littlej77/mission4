
@{
    ViewData["Title"] = "Movie Form";
}
@model mission4.Models.MovieResponse
<h1>Submit a movie!</h1>

<div>
    <form method="post">

        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category m in ViewBag.Categories)
            {
                <option value="@m.CategoryID">@m.CategoryType</option>
            }
        </select> <br />

        <label>Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating ">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="Notes">Notes:</label>
        <input maxlength="25" asp-for="Notes" /><br />

        <div asp-validation-summary="All"></div>

        <button type="submit">Submit Movie</button>
    </form>
</div>